<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" 
    android:gravity="center_horizontal">
   <ImageView
        android:id="@+id/logo_apln"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/normal_padding"
        android:src="@drawable/ic_launcher"
        android:contentDescription="@string/image_content_description" />

    <TextView
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:paddingTop="@dimen/large_padding"
        android:text="@string/nom_utilisateur"
        style="@style/texte_inscription" />

    <EditText
        android:id="@+id/nom_utilisateur"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:drawableBottom="@color/green_color"
        android:textSize="@dimen/large_text_size"
        android:layout_width="250dp"
        android:textColor="@color/white_color"
        style="@style/EditTextAppTheme"
        />
    

    <Button
        android:id="@+id/btn_enregistrer"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/normal_padding"
        android:text="@string/enregistrer" 
        android:onClick="enregistrerUtilisateur"
        android:background="@drawable/bouton_vert"
        style="@style/texte_inscription"/>

</LinearLayout>